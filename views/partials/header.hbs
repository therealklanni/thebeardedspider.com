<header class="media">
  <div class="media media-figure">
    <span class="media-figure logo"></span>
    <span class="media-body header-title">{{title}}</span>
  </div>
  <div class="twitch-status media-body">Twitch status (live, standby)</div>
  {{#if user}}
  <div class="user">
    <span class="welcome">Welcome, {{user.displayName}}!</span>
    <div class="user-menu">
      <img class="user-logo" src="{{user.logo}}" alt="{{user.displayName}}">
      <span class="user-menu-button fa fa-fw fa-2x fa-chevron-down"></span>
      <ul class="user-menu-items">
        <a href="/auth/twitch/logout"><li>Sign out</li></a>
      </ul>
    </div>
  </div>
  {{else}}
  <div class="signin"><a href="/auth/twitch" class="btn-action">
    <span class="fa fa-2x fa-sign-in"></span>
    <span class="text">Sign in with Twitch</span>
  </a></div>
  {{/if}}
</header>
