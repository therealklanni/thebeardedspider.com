{
  "name": "thebeardedspider",
  "version": "0.0.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "build": "browserify -t babelify ./public/scripts/index.js -o ./public/scripts/bundle.js",
    "inspect": "node-inspector &",
    "lint": "xo",
    "start": "forever -c babel-node server.js",
    "start:dev": "npm run watch && source .env && npm run inspect && DEBUG=bearded:* nodemon --debug --ignore public/ --exec babel-node server.js",
    "stop": "pm2 stop server.js",
    "test": "npm run lint",
    "watch": "watchify -t babelify ./public/scripts/index.js -o ./public/scripts/bundle.js -v &"
  },
  "dependencies": {
    "babel": "^5.8.19",
    "body-parser": "~1.13.2",
    "connect-mongo": "^0.8.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "dotty": "0.0.2",
    "express": "~4.13.1",
    "express-handlebars": "^2.0.1",
    "express-session": "^1.11.3",
    "forever": "^0.15.0",
    "got": "^4.1.1",
    "hbs": "~3.1.0",
    "jquery": "^2.1.4",
    "lodash": "^3.10.0",
    "mongoose": "^4.1.0",
    "mongoose-findorcreate": "^0.1.2",
    "morgan": "~1.6.1",
    "node-sass-middleware": "^0.9.0",
    "normalize.css": "^3.0.3",
    "passport": "^0.2.2",
    "passport-github2": "^0.1.9",
    "passport-twitch": "^1.0.1",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.0.1",
    "node-inspector": "^0.12.1",
    "nodemon": "^1.4.0",
    "uglifyify": "^3.0.1",
    "xo": "^0.8.0"
  },
  "xo": {
    "envs": [
      "es6",
      "node"
    ],
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "express.Router"
          ]
        }
      ],
      "babel/object-curly-spacing": [2, "always"],
      "no-nested-ternary": 1,
      "curly": [2, "multi-line"]
    }
  }
}
